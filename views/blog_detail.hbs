{{#> layout currentPage="Blog"}}

<!-- Blog Detail Section -->
<article class="blog_detail">
    <h1>
        {{blog.title}}
    </h1>

    <p>{{formatDateToWIB blog.createdAt}} | {{blog.authorId}} </p>

    <img src="{{blog.image}}" alt="blog_image" />
    <p class="mt-3">
        {{blog.content}}
    </p>

</article>


{{/layout}}